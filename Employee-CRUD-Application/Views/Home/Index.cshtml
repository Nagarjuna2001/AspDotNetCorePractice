@model IEnumerable<Employee>

@{ 
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Employee Details";
}

<div class="card-deck">
    @foreach (var employee in Model)
    {
        var photoPath = "~/Images/" + (employee.PhotoPath ?? "loginIcon.png");
        <div class="card m-3">
            <h3>@employee.Name</h3>
        </div>

        <img class="imageThumbnail" asp-append-version="true" src="@photoPath" />
        <div class="card-footer text-center">
            <a asp-controller="home" asp-action="details" asp-route-id="@employee.Id" class="btn btn-primary m-1">View</a>
            <a asp-controller="home" asp-action="edit" asp-route-id="@employee.Id" class="btn btn-primary m-1">Edit</a>
            <a href="#" class="btn btn-primary m-1">Show</a>

        </div>
    }
</div>


